# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_postgres_password_here
DB_NAME=distributed_computing
DB_SSLMODE=disable

# PostgreSQL Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=distributed_computing
POSTGRES_HOST_AUTH_METHOD=trust

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here

# Backend Configuration
SERVER_PORT=8080
SKIP_AUTH_VALIDATION=false

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://app.gstdtoken.com

# Security Notes:
# 1. Copy this file to .env and set secure passwords
# 2. Never commit .env to version control
# 3. Use strong, unique passwords in production
# 4. Consider using secrets management (e.g., Docker secrets, Kubernetes secrets)
